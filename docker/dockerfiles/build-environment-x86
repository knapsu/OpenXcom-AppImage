FROM i386/ubuntu:trusty

ARG DEBIAN_FRONTEND=noninteractive

ADD assets/dpkg_nodoc /etc/dpkg/dpkg.cfg.d/90_nodoc
ADD assets/dpkg_nolocale /etc/dpkg/dpkg.cfg.d/90_nolocale
ADD assets/apt_nocache /etc/apt/apt.conf.d/90_nocache
ADD assets/apt_mindeps /etc/apt/apt.conf.d/90_mindeps

# Add package repositories
RUN set -e \
  && apt-get update \
  && apt-get install -y software-properties-common \
  && add-apt-repository -y ppa:knapsu/openxcom \
  && add-apt-repository -y ppa:git-core/ppa \
  && rm -rf /var/lib/apt/lists/* \
  && rm -rf /tmp/* /var/tmp/* /var/log/*

# Install development tools and libraries
RUN set -e \
  && apt-get update \
  && apt-get install -y \
    nano \
    wget \
    curl \
    git \
    build-essential \
    doxygen \
    libsdl1.2-dev \
    libsdl-gfx1.2-dev \
    libsdl-image1.2-dev \
    libsdl-mixer1.2-dev \
    libyaml-cpp-dev \
    libboost-dev \
    python3-pip \
    python3-setuptools \
    fuse \
    file \
    ccache \
  && rm -rf /var/lib/apt/lists/* \
  && rm -rf /tmp/* /var/tmp/* /var/log/*

# Install CMake
RUN set -e \
  && wget https://cmake.org/files/v3.6/cmake-3.6.3-Linux-i386.sh \
  && sh cmake-3.6.3-Linux-i386.sh --prefix=/usr/local --exclude-subdir \
  && rm -f cmake-3.6.3-Linux-i386.sh

# Install Transifex Client
RUN set -e \
  && python3 -m pip install -U pip \
  && python3 -m pip install -U transifex-client
